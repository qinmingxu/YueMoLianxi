<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:id="@+id/linear"
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/back"
            android:src="@mipmap/icon_back"
            android:layout_width="25dp"
            android:layout_height="25dp" />
        <android.support.design.widget.TabLayout
            android:id="@+id/tab_layout"
            app:tabSelectedTextColor="#ff0000"
            app:tabIndicatorColor="#00ff00"
            app:tabTextColor="#000000"
            app:tabGravity="center"
            android:layout_weight="1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"></android.support.design.widget.TabLayout>

        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/fenxiang"
            android:src="@drawable/fenxiang"
            android:layout_width="30dp"
            android:layout_height="30dp" />
    </LinearLayout>
    <View
        android:id="@+id/view"
        android:layout_below="@+id/linear"
        android:background="#D4D4D4"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <com.youth.banner.Banner
        android:background="#00ff00"
        android:layout_below="@+id/view"
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="400dp"></com.youth.banner.Banner>
    <LinearLayout
        android:layout_above="@+id/linear02"
        android:layout_below="@+id/banner"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textSize="20dp"
            android:id="@+id/miao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="20dp"
            android:layout_marginTop="15dp"
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#ff0000"
            android:textSize="20dp"
            android:layout_marginTop="15dp"
            android:id="@+id/price02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear02"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/shang"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@drawable/dian"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@drawable/fouse"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/cart"
            android:src="@drawable/car"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/addcart"
            android:background="#F23030"
            android:src="@drawable/addcart"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
</RelativeLayout>
